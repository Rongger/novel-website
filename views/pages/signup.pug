extend ../layout.pug

block head
	script(src="js/validator.js")
	script(src="js/input.js")
	script(src="js/signup.js")
	script(type='text/javascript').
		console.log("hahaha")			
		console.log("hehe")


block content
	- if(!isLogined){
		div(class="container row")
			div(class="col-sm-3 col-md-2")
				.sidebar
					a.sidebar-item(href="/login") 登录
					a.sidebar-item(href="/signup") 注册
					a.sidebar-item(href="n") 小说列表

			div(class="col-sm-9 col-md-10")
				.form-container
					h3 注册
					p
						span 已有帐号？
						a(href="/login") 登录
					form(action="" id="signup")
						dl
							dd.form-group
								span 用户名
								input(id='username' class="form-control" type='text' name='username')
								div(id="username-input-error" class="input-error") 用户名格式有误
							dd.form-group
								span 密码
								input(id='password' class="form-control" type='password' name='password')
								div(id="password-input-error" class="input-error") 密码格式有误
							dd.form-group
								span 邮箱
								input(id='e-mail' class="form-control" type="text" name='email')
								div(id="email-input-error" class="input-error") 邮箱格式有误
						input(type="submit" value="提交" id="submit" class="btn btn-default")

				.msg-success
	- }else{
		h4(style="text-align: center;margin-top: 50px;") 您已登录
	- }	